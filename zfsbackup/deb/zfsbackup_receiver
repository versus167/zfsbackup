## Allow zfsbackup_receiver to be called via sudo without a password
##
## CAUTION: Any syntax error introduced here will break sudo.
##
Cmnd_Alias C_ZFSBACKUP_RECEIVER = \
  /usr/bin/zfsbackup_receiver zfs receive *, \
  /usr/bin/zfsbackup_receiver zfs hold *, \
  /usr/bin/zfsbackup_receiver zfs release *, \
  /usr/bin/zfsbackup_receiver zfs load-key *, \
  /usr/bin/zfsbackup_receiver zfs unload-key *

ALL ALL = (root) NOPASSWD: C_ZFSBACKUP_RECEIVER
